{
  "name": "react-redux-ts-boilerplate",
  "version": "0.0.1",
  "description": "React Redux TypeScript boilerplate",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "compile": "NODE_ENV=production webpack",
    "start": "webpack-dev-server --hot",
    "test": "jest --coverage",
    "test:dev": "jest --watch"
  },
  "author": "Ludek Stepan <ludek.stepan@gmail.com> (https://github.com/ludekstepan)",
  "license": "ISC",
  "dependencies": {
    "react": "^15.4.0",
    "react-dom": "^15.4.0",
    "react-redux": "^4.4.6",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "@types/jest": "^16.0.0",
    "@types/react": "^0.14.49",
    "awesome-typescript-loader": "^2.2.4",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "html-webpack-plugin": "^2.24.1",
    "jest": "^17.0.3",
    "react-hot-loader": "^3.0.0-beta.6",
    "rimraf": "^2.5.4",
    "typescript": "^2.1.1",
    "typescript-babel-jest": "^0.1.8",
    "webpack": "^2.1.0-beta.27",
    "webpack-config-utils": "^2.1.0",
    "webpack-dev-server": "^2.1.0-beta.11",
    "webpack-visualizer-plugin": "^0.1.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ludekstepan/ts-boilerplate.git"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js|jsx|ts|tsx)$",
    "transform": {
      "\\.(js|jsx|ts|tsx)$": "node_modules/typescript-babel-jest"
    }
  }
}
